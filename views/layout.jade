doctype html
html
  head
    title Preston Pham
    block css
      link(href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700', rel='stylesheet', type='text/css')
      link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
      if locals.theme === 'light'
        link(rel='stylesheet', href='/stylesheets/style-light.css')
      else 
        link(rel='stylesheet', href='/stylesheets/style.css')
      link(rel="shortcut icon", href=locals.gravatar)
      link(rel="apple-touch-icon", href=locals.gravatar)
  body
    .overlay
    .container
      include ./includes/nav
      .content
        block content
    block scripts
      script(src="https://code.jquery.com/jquery-2.1.4.min.js")
      script(src="js/transition.js")
      script(src="js/zoom.js")
      script.
        function ready(fn) {
          if (document.readyState != 'loading'){
            fn();
          } else {
            document.addEventListener('DOMContentLoaded', fn);
          }
        }

        ready(function animate() {
          document.querySelectorAll('nav')[0].className += ' dropin';
          document.querySelectorAll('.overlay')[0].className += ' fadeout';
        });
